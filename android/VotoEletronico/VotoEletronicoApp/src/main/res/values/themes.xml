<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VotoEletronico" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/white</item>
        <item name="toolbarStyle">@style/Theme.VotoEletronico.Widget.MaterialComponents.Toolbar.PrimarySurface</item>
        <item name="appBarLayoutStyle">@style/Theme.VotoEletronico.Widget.MaterialComponents.AppBarLayout.Surface</item>
    </style>

    <!-- Sobreescrevi o tema da barra superior do app para trocar as cores dos elementos da barra de título -->
    <style name="Theme.VotoEletronico.Widget.MaterialComponents.Toolbar.PrimarySurface" parent="@style/Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <!-- Sobreescrevi para colocar a cor de fundo branca ao abrir as telas -->
    <style name="Theme.VotoEletronico.NoActionBar" parent="Theme.VotoEletronico">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Sobreescrevi para colocar a cor de fundo branca do conteúdo das telas -->
    <style name="Theme.VotoEletronico.Widget.MaterialComponents.AppBarLayout.Surface" parent="Widget.MaterialComponents.AppBarLayout.Surface">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme.VotoEletronico.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.VotoEletronico.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>